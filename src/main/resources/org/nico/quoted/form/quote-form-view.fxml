<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="300.0"
            prefWidth="400.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.nico.quoted.ui.controller.form.QuoteFormViewController">
    <VBox prefHeight="300.0" prefWidth="400.0">
        <TextArea fx:id="quoteTextField" prefHeight="237.0" prefWidth="380.0">
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </VBox.margin>
        </TextArea>
        <GridPane prefHeight="180.0" prefWidth="400.0">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <VBox.margin>
                <Insets/>
            </VBox.margin>
            <Button fx:id="confirmButton" mnemonicParsing="false" onAction="#onConfirmButtonClicked"
                    text="Confirm" GridPane.columnIndex="1" GridPane.rowIndex="2">
                <GridPane.margin>
                    <Insets left="10.0" right="10.0"/>
                </GridPane.margin>
            </Button>
            <Label fx:id="errorLabel" style="-fx-text-fill: red;" styleClass="ErrorClass" text="Error Message"
                   GridPane.rowIndex="2">
                <padding>
                    <Insets left="10.0" right="10.0"/>
                </padding>
            </Label>
            <Label text="Book">
                <padding>
                    <Insets top="10.0"/>
                </padding>
                <GridPane.margin>
                    <Insets right="10.0"/>
                </GridPane.margin>
            </Label>
            <CheckBox fx:id="urlCheckBox" mnemonicParsing="false" onAction="#toggleUrlField" text="URL"
                      GridPane.rowIndex="1">
                <GridPane.margin>
                    <Insets right="10.0"/>
                </GridPane.margin>
            </CheckBox>
            <TextField fx:id="urlTextField" GridPane.columnIndex="1" GridPane.rowIndex="1">
                <GridPane.margin>
                    <Insets left="10.0" right="10.0"/>
                </GridPane.margin>
            </TextField>
            <ChoiceBox fx:id="bookChoiceBox" prefWidth="150.0" GridPane.columnIndex="1">
                <GridPane.margin>
                    <Insets left="10.0" right="10.0"/>
                </GridPane.margin>
            </ChoiceBox>
        </GridPane>
    </VBox>
</AnchorPane>
